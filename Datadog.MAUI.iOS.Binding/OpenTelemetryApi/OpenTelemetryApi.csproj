<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-ios;net10.0-ios</TargetFrameworks>
    <SupportedOSPlatformVersion>17.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);NETSDK1202;NU5123;CS8767</NoWarn>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>Datadog.MAUI.iOS.OpenTelemetryApi</AssemblyName>

    <PackageId>Datadog.MAUI.iOS.OpenTelemetryApi</PackageId>
    <Authors>Datadog</Authors>
    <Description>.NET Bindings for OpenTelemetry API framework (distributed with Datadog iOS SDK)</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DataDog/dd-sdk-maui</RepositoryUrl>
    <PackageTags>.NET MAUI iOS Datadog Mobile Binding OpenTelemetry</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <XCFrameworkPath>../artifacts/OpenTelemetryApi.xcframework</XCFrameworkPath>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>

  <ItemGroup>
    <ObjcBindingApiDefinition Include="ApiDefinition.cs" />
    <ObjcBindingCoreSource Include="StructsAndEnums.cs" />
  </ItemGroup>

  <ItemGroup>
    <NativeReference Include="$(XCFrameworkPath)">
      <Kind>Framework</Kind>
      <SmartLink>True</SmartLink>
      <ForceLoad>True</ForceLoad>
    </NativeReference>
  </ItemGroup>

  <!-- Package README -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
