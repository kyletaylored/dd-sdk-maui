<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DatadogMauiSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DatadogMauiSample"
    Title="Shopist Demo"
    Shell.TabBarBackgroundColor="#512BD4"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#B0FFFFFF"
    Shell.TabBarTitleColor="White">

    <TabBar>
        <ShellContent
            Title="Products"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:ProductsPage}"
            Route="ProductsPage"
            AutomationId="tab_products" />

        <ShellContent
            Title="Cart"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:CartPage}"
            Route="CartPage"
            AutomationId="tab_cart" />

        <ShellContent
            Title="Store"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:WebViewPage}"
            Route="WebViewPage"
            AutomationId="tab_store" />

        <ShellContent
            Title="Profile"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage"
            AutomationId="tab_profile" />
    </TabBar>

</Shell>
