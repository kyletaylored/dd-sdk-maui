<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DatadogMauiSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DatadogMauiSample.Views"
    Title="Shopist Demo"
    Shell.TabBarBackgroundColor="#512BD4"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#B0FFFFFF"
    Shell.TabBarTitleColor="White">

    <TabBar>
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate views:ProductsPage}"
            Route="ProductsPage"
            AutomationId="tab_products" />

        <ShellContent
            Title="Cart"
            ContentTemplate="{DataTemplate views:CartPage}"
            Route="CartPage"
            AutomationId="tab_cart" />

        <ShellContent
            Title="Store"
            ContentTemplate="{DataTemplate views:WebViewPage}"
            Route="WebViewPage"
            AutomationId="tab_store" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="ProfilePage"
            AutomationId="tab_profile" />

        <ShellContent
            Title="Testing"
            ContentTemplate="{DataTemplate views:ErrorTestingPage}"
            Route="ErrorTestingPage"
            AutomationId="tab_testing" />
    </TabBar>

</Shell>
