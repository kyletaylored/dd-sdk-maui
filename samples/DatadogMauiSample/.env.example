# ------------------------------------------
# DataDog Configuration for Shopist Demo
# Copy this file to .env and fill in your credentials
# ------------------------------------------

# General settings
DD_ENV=dev
DD_SERVICE_NAME=shopist-maui-demo
DD_VERBOSE_LOGGING=true

# DataDog RUM - Android
DD_RUM_ANDROID_CLIENT_TOKEN=your_android_client_token_here
DD_RUM_ANDROID_APPLICATION_ID=your_android_app_id_here

# DataDog RUM - iOS
DD_RUM_IOS_CLIENT_TOKEN=your_ios_client_token_here
DD_RUM_IOS_APPLICATION_ID=your_ios_app_id_here

# Sample rates (0-100)
DD_SESSION_SAMPLE_RATE=100
DD_SESSION_REPLAY_SAMPLE_RATE=100
