# --------------------------------------------------
# Datadog configuration for MAUI Shopist demo
# Copy to .env (DO NOT COMMIT .env)
# --------------------------------------------------

# =====================
# Global Datadog config
# =====================

# REQUIRED for all uploads
DD_API_KEY=your_datadog_api_key_here
DATADOG_API_KEY=your_datadog_app_key_here

# Environment tag (dev / staging / prod)
DD_ENV=dev

# App / release version (should match ApplicationDisplayVersion)
DD_VERSION=1.0

# Enable verbose SDK logging (runtime only)
DD_VERBOSE_LOGGING=true


# =====================
# Runtime RUM (shared)
# =====================

# Used by the app at runtime (NOT for symbol upload)
DD_SERVICE_NAME=shopist-maui-demo

# Session sampling (0â€“100)
DD_SESSION_SAMPLE_RATE=100
DD_SESSION_REPLAY_SAMPLE_RATE=100


# =====================
# Android RUM (runtime)
# =====================

DD_RUM_ANDROID_CLIENT_TOKEN=your_android_client_token_here
DD_RUM_ANDROID_APPLICATION_ID=your_android_application_id_here


# =====================
# Android symbol upload
# =====================

# REQUIRED: Datadog site *code* for Android Gradle plugin
# Examples: US1, EU1, US3, US5
DD_ANDROID_SITE=US1

# Service name used for Android symbols
DD_ANDROID_SERVICE=datadog-maui-android


# =====================
# iOS RUM (runtime)
# =====================

DD_RUM_IOS_CLIENT_TOKEN=your_ios_client_token_here
DD_RUM_IOS_APPLICATION_ID=your_ios_application_id_here


# =====================
# iOS symbol upload
# =====================

# Service name used for iOS dSYM upload
DD_IOS_SERVICE=datadog-maui-ios

# Site *domain* used by datadog-ci (NOT site code)
# Examples: datadoghq.com, datadoghq.eu
DATADOG_SITE=datadoghq.com