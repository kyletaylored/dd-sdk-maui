<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Only targeting Android and iOS for Datadog SDK -->
		<TargetFrameworks>net9.0-android;net10.0-android;net9.0-ios;net10.0-ios</TargetFrameworks>

		<OutputType>Exe</OutputType>
		<RootNamespace>DatadogMauiSample</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Display name -->
		<ApplicationTitle>MAUI Shopist Demo</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.datadog.datadog-maui-shopist.demo</ApplicationId>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Platform-specific settings -->
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">17.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">23.0</SupportedOSPlatformVersion>
	</PropertyGroup>

	<!-- Android-specific settings to fix tracing library conflicts -->
	<PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-android' And '$(Configuration)' == 'Debug'">
		<!-- Use multidex and disable R8 optimizations for Debug to avoid duplicate class errors -->
		<AndroidDexTool>d8</AndroidDexTool>
		<AndroidEnableMultiDex>true</AndroidEnableMultiDex>
		<AndroidLinkMode>None</AndroidLinkMode>
		<AndroidPackageFormat>apk</AndroidPackageFormat>
		<AndroidProguardFile>Platforms\Android\proguard-r8.txt</AndroidProguardFile>
		<!-- Disable Java dependency verification - Kotlin stdlib is embedded in Datadog SDK AARs -->
		<AndroidVerifyJavaDependencies>false</AndroidVerifyJavaDependencies>
	</PropertyGroup>

	<!-- Android Release configuration with R8 code shrinking -->
	<PropertyGroup Condition="$(TargetFramework.Contains('android')) And '$(Configuration)' == 'Release'">
		<!-- Enable R8 code shrinker to generate mapping files -->
		<AndroidEnableR8>True</AndroidEnableR8>
		<AndroidLinkTool>r8</AndroidLinkTool>
		<AndroidLinkMode>SdkOnly</AndroidLinkMode>
		<AndroidPackageFormat>aab</AndroidPackageFormat>
		<!-- Disable Java dependency verification - Kotlin stdlib is embedded in Datadog SDK AARs -->
		<AndroidVerifyJavaDependencies>false</AndroidVerifyJavaDependencies>
		<!-- Disable AOT for sample app to avoid compilation issues with bindings -->
		<RunAOTCompilation>false</RunAOTCompilation>
	</PropertyGroup>

	<!-- Custom target to remove duplicate tracing AAR before dex compilation -->
	<Target Name="RemoveDuplicateTracingAAR" BeforeTargets="_CompileToDalvik" Condition="'$(TargetFramework)' == 'net10.0-android'">
		<Exec Command="find $(IntermediateOutputPath)lp -type d -name '12*' -o -name '16*' | while read dir; do if [ -f &quot;$$dir/jl/classes.jar&quot; ] &amp;&amp; unzip -l &quot;$$dir/jl/classes.jar&quot; 2&gt;/dev/null | grep -q 'androidx/tracing/TraceKt.class' &amp;&amp; echo &quot;$$dir&quot; | grep -q '/12'; then echo &quot;Removing duplicate tracing-android from $$dir&quot;; rm -rf &quot;$$dir/jl/classes.jar&quot;; fi; done"
			  IgnoreExitCode="true"
			  Condition="Exists('$(IntermediateOutputPath)lp')" />
	</Target>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.png" Resize="True" BaseSize="300,185" />
		
		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.9" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
	</ItemGroup>

	<!-- Android-specific package exclusions -->
	<ItemGroup Condition="$(TargetFramework.Contains('android'))">
		<!-- Exclude JVM variant of Compose runtime annotations to prevent R8 duplicate class errors -->
		<PackageReference Include="Xamarin.AndroidX.Compose.Runtime.Annotation.Jvm" Version="1.10.0.1" ExcludeAssets="All" />

		<!-- Force consistent SavedState version to prevent duplicate class errors -->
		<PackageReference Include="Xamarin.AndroidX.SavedState" Version="1.4.0.1" />
		<PackageReference Include="Xamarin.AndroidX.SavedState.SavedState.Ktx" Version="1.3.1.1" ExcludeAssets="compile;runtime;native" />
	</ItemGroup>


	<!-- ================================================================ -->
	<!-- Datadog.MAUI Plugin Reference Strategy                           -->
	<!-- ================================================================ -->
	<!-- Debug builds: Use ProjectReference for fast iteration            -->
	<!-- Release builds: Use PackageReference to test actual NuGet packages -->
	<!-- CI builds: Use PackageReference from pipeline artifacts          -->

	<!-- Debug: Use ProjectReference for fast local development -->
	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ProjectReference Include="..\..\Datadog.MAUI.Plugin\Datadog.MAUI.Plugin.csproj" />
	</ItemGroup>

	<!-- Release: Use PackageReference from local artifacts or CI artifacts -->
	<ItemGroup Condition="'$(Configuration)' == 'Release'">
		<PackageReference Include="Datadog.MAUI" Version="$(DatadogSdkVersion)" />
	</ItemGroup>

	<!-- Local NuGet source for Release builds (points to ./artifacts) -->
	<!-- CI builds will override this via nuget.config or command-line restore -->
	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<RestoreAdditionalProjectSources>$(MSBuildProjectDirectory)/../../artifacts;$(RestoreAdditionalProjectSources)</RestoreAdditionalProjectSources>
	</PropertyGroup>

	<!-- ================================================================ -->
	<!-- MSBuild Targets for Platform-Specific RUM Configuration         -->
	<!-- ================================================================ -->

	<!-- Property resolution: Read from environment if not set via command line -->
	<PropertyGroup>
		<AndroidClientToken Condition="'$(AndroidClientToken)' == ''">$(DD_RUM_ANDROID_CLIENT_TOKEN)</AndroidClientToken>
		<AndroidApplicationId Condition="'$(AndroidApplicationId)' == ''">$(DD_RUM_ANDROID_APPLICATION_ID)</AndroidApplicationId>
		<IosClientToken Condition="'$(IosClientToken)' == ''">$(DD_RUM_IOS_CLIENT_TOKEN)</IosClientToken>
		<IosApplicationId Condition="'$(IosApplicationId)' == ''">$(DD_RUM_IOS_APPLICATION_ID)</IosApplicationId>
	</PropertyGroup>

	<!-- Generate Android config file before build -->
	<Target Name="GenerateAndroidRumConfig" BeforeTargets="BeforeBuild" Condition="$(TargetFramework.Contains('android'))">
		<Message Text="ðŸ• Generating Android RUM config file..." Importance="high" Condition="'$(AndroidClientToken)' != ''" />
		<Message Text="  Client Token: $(AndroidClientToken)" Importance="high" Condition="'$(AndroidClientToken)' != ''" />
		<Message Text="  Application ID: $(AndroidApplicationId)" Importance="high" Condition="'$(AndroidApplicationId)' != ''" />
		<Message Text="âš ï¸  No Android RUM credentials found! App will use placeholder values." Importance="high" Condition="'$(AndroidClientToken)' == ''" />

		<WriteLinesToFile
			File="$(MSBuildProjectDirectory)/Config/datadog-rum-android.config"
			Lines="DD_RUM_ANDROID_CLIENT_TOKEN=$(AndroidClientToken);DD_RUM_ANDROID_APPLICATION_ID=$(AndroidApplicationId)"
			Overwrite="true"
			Condition="'$(AndroidClientToken)' != ''" />
	</Target>

	<!-- Generate iOS config file before build -->
	<Target Name="GenerateIosRumConfig" BeforeTargets="BeforeBuild" Condition="$(TargetFramework.Contains('ios'))">
		<Message Text="ðŸ• Generating iOS RUM config file..." Importance="high" Condition="'$(IosClientToken)' != ''" />
		<Message Text="  Client Token: $(IosClientToken)" Importance="high" Condition="'$(IosClientToken)' != ''" />
		<Message Text="  Application ID: $(IosApplicationId)" Importance="high" Condition="'$(IosApplicationId)' != ''" />
		<Message Text="âš ï¸  No iOS RUM credentials found! App will use placeholder values." Importance="high" Condition="'$(IosClientToken)' == ''" />

		<WriteLinesToFile
			File="$(MSBuildProjectDirectory)/Config/datadog-rum-ios.config"
			Lines="DD_RUM_IOS_CLIENT_TOKEN=$(IosClientToken);DD_RUM_IOS_APPLICATION_ID=$(IosApplicationId)"
			Overwrite="true"
			Condition="'$(IosClientToken)' != ''" />
	</Target>

	<!-- Embed config files as resources -->
	<ItemGroup Condition="$(TargetFramework.Contains('android'))">
		<EmbeddedResource Include="Config/datadog-rum-android.config" Condition="Exists('Config/datadog-rum-android.config')" />
	</ItemGroup>

	<ItemGroup Condition="$(TargetFramework.Contains('ios'))">
		<EmbeddedResource Include="Config/datadog-rum-ios.config" Condition="Exists('Config/datadog-rum-ios.config')" />
	</ItemGroup>

</Project>
