<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:DatadogMauiSample.Controls"
             xmlns:models="clr-namespace:DatadogMauiSample.Models"
             x:Class="DatadogMauiSample.Views.ProductsPage"
             Title="Products">
    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <!-- Navigation Banner -->
        <controls:NavigationBanner Grid.Row="0"/>

        <Grid Grid.Row="1" RowDefinitions="Auto,Auto" Padding="10,10,10,0">
            <!-- Header Title -->
            <Label Grid.Row="0"
                   Text="Shopist Products"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <!-- Action Buttons Row -->
            <HorizontalStackLayout Grid.Row="1" Spacing="10" Margin="0,0,0,10" FlowDirection="LeftToRight" HorizontalOptions="Start">
                <Button x:Name="RefreshButton"
                        AutomationId="refresh_products_button"
                        Text="Refresh"
                        Clicked="OnRefreshClicked"/>

                <Picker x:Name="CategoryPicker"
                        Title="Category"
                        WidthRequest="150"
                        SelectedIndexChanged="OnCategoryChanged"/>

                <Picker x:Name="LimitPicker"
                        Title="Limit"
                        WidthRequest="100"
                        SelectedIndexChanged="OnLimitChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>5</x:String>
                            <x:String>10</x:String>
                            <x:String>20</x:String>
                            <x:String>All</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Button x:Name="ViewCartButton"
                        AutomationId="view_cart_button"
                        Text="View Cart"
                        Clicked="OnViewCartClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"/>

                <Button x:Name="TestPurchaseButton"
                        AutomationId="test_purchase_button"
                        Text="Test Purchase"
                        Clicked="OnTestPurchaseClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- Products List -->
        <CollectionView Grid.Row="2"
                        Margin="10,0,10,10"
                        x:Name="ProductsCollectionView"
                        AutomationId="products_list"
                        SelectionMode="Single"
                        SelectionChanged="OnProductSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Grid Padding="10" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="80,*,Auto">
                        <!-- Product Image -->
                        <Image Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                               Source="{Binding ImageUrl}"
                               Aspect="AspectFill"
                               WidthRequest="80"
                               HeightRequest="80"
                               Margin="0,0,10,0">
                            <Image.Clip>
                                <RoundRectangleGeometry Rect="0,0,80,80" CornerRadius="8"/>
                            </Image.Clip>
                        </Image>

                        <!-- Product Name -->
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Name}"
                               FontSize="16"
                               FontAttributes="Bold"
                               LineBreakMode="TailTruncation"
                               MaxLines="1"/>

                        <!-- Product Description -->
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Description}"
                               FontSize="12"
                               TextColor="Gray"
                               LineBreakMode="TailTruncation"
                               MaxLines="2"/>

                        <!-- Product Price -->
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="{Binding Price, StringFormat='${0:F2}'}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#2196F3"
                               VerticalOptions="End"/>

                        <!-- Stock Status -->
                        <Label Grid.Row="0" Grid.Column="2"
                               Text="{Binding InStock, Converter={StaticResource StockStatusConverter}}"
                               FontSize="12"
                               TextColor="{Binding InStock, Converter={StaticResource StockColorConverter}}"
                               VerticalOptions="Start"
                               HorizontalOptions="End"
                               Margin="5,0,0,0"/>

                        <!-- Separator -->
                        <BoxView Grid.Row="3" Grid.ColumnSpan="3"
                                 HeightRequest="1"
                                 Color="LightGray"
                                 Margin="0,10,0,0"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No products available"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Tap Refresh to load products"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="3"
                          x:Name="LoadingIndicator"
                          IsRunning="False"
                          IsVisible="False"
                          Color="#2196F3"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>
