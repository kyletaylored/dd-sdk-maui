<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:DatadogMauiSample.Controls"
             x:Class="DatadogMauiSample.Views.WebViewPage"
             Title="Shopist Store">
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Navigation Banner -->
        <controls:NavigationBanner Grid.Row="0"/>

        <!-- Header with URL bar -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Padding="10" BackgroundColor="#F5F5F5">
            <Entry Grid.Column="0"
                   x:Name="UrlEntry"
                   Text="https://shopist.io"
                   VerticalOptions="Center"
                   Margin="0,0,5,0"/>

            <Button Grid.Column="1"
                    Text="Go"
                    Clicked="OnGoClicked"
                    WidthRequest="60"
                    Margin="0,0,5,0"/>

            <Button Grid.Column="2"
                    Text="Refresh"
                    Clicked="OnRefreshClicked"
                    WidthRequest="80"/>
        </Grid>

        <!-- WebView -->
        <WebView Grid.Row="2"
                 x:Name="ShopistWebView"
                 Source="https://shopist.io"
                 Navigating="OnNavigating"
                 Navigated="OnNavigated"/>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                          x:Name="LoadingIndicator"
                          IsRunning="False"
                          IsVisible="False"
                          Color="#2196F3"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>
