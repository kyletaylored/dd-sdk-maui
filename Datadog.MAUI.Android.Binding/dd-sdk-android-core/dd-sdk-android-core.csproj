<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-android;net10.0-android</TargetFrameworks>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>

    <PackageId>Datadog.MAUI.Android.Core</PackageId>
    <RootNamespace>Datadog.MAUI.Android.Core</RootNamespace>
    <Authors>Datadog</Authors>
    <Description>.NET bindings for Datadog Android SDK Core module</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DataDog/dd-sdk-maui</RepositoryUrl>
    <PackageTags>.NET MAUI Android Datadog Mobile Binding</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\dd-sdk-android-internal\dd-sdk-android-internal.csproj" />
  </ItemGroup>

  <ItemGroup>
    <AndroidMavenLibrary Include="com.datadoghq:dd-sdk-android-core" Version="$(DatadogSdkVersion)" />
    <!-- Runtime Maven dependencies from POM (generated by scripts/generate-android-dependencies.sh) -->
    <!-- kotlin-stdlib is embedded in Datadog SDK AARs, not fetched from Maven -->
    <AndroidMavenLibrary Include="com.squareup.okhttp3:okhttp" Version="4.12.0" Bind="false" />
    <!-- Gson is provided by GoogleGson NuGet package (see PackageReferences below), not Maven -->
    <AndroidMavenLibrary Include="com.lyft.kronos:kronos-android" Version="0.0.1-alpha11" Bind="false" />
    <AndroidMavenLibrary Include="com.datadoghq:dd-sdk-android-internal" Version="3.5.0" Bind="false" />
    <!-- Transitive runtime dependencies -->
    <AndroidMavenLibrary Include="com.squareup.okio:okio" Version="3.6.0" Bind="false" />
    <AndroidMavenLibrary Include="com.squareup.okio:okio-jvm" Version="3.6.0" Bind="false" />
    <!-- org.jetbrains:annotations is provided by Xamarin.Jetbrains.Annotations NuGet package (see PackageReferences below) -->
    <AndroidMavenLibrary Include="com.lyft.kronos:kronos-java" Version="0.0.1-alpha11" Bind="false" />
  </ItemGroup>

  <!-- Ignore test dependencies that are in the AAR metadata but not needed at runtime -->
  <ItemGroup>
    <AndroidIgnoredJavaDependency Include="org.junit.platform:junit-platform-launcher:1.9.3" />
    <AndroidIgnoredJavaDependency Include="org.junit.jupiter:junit-jupiter:5.9.3" />
    <AndroidIgnoredJavaDependency Include="org.junit.vintage:junit-vintage-engine:5.9.3" />
    <AndroidIgnoredJavaDependency Include="org.mockito:mockito-junit-jupiter:5.4.0" />
    <AndroidIgnoredJavaDependency Include="org.assertj:assertj-core:3.18.1" />
    <AndroidIgnoredJavaDependency Include="com.github.xgouchet.Elmyr:core:1.3.1" />
    <AndroidIgnoredJavaDependency Include="com.github.xgouchet.Elmyr:inject:1.3.1" />
    <AndroidIgnoredJavaDependency Include="com.github.xgouchet.Elmyr:junit5:1.3.1" />
    <AndroidIgnoredJavaDependency Include="com.github.xgouchet.Elmyr:jvm:1.3.1" />
    <AndroidIgnoredJavaDependency Include="org.mockito.kotlin:mockito-kotlin:5.1.0" />
    <AndroidIgnoredJavaDependency Include="dd-sdk-android.tools:unit:unspecified" />
    <!-- Kotlin stdlib is embedded in Datadog SDK AARs - specify highest version seen -->
    <AndroidIgnoredJavaDependency Include="org.jetbrains.kotlin:kotlin-stdlib:2.0.21" />
    <AndroidIgnoredJavaDependency Include="org.jetbrains.kotlin:kotlin-stdlib-jdk8:1.9.10" />
    <AndroidIgnoredJavaDependency Include="org.jetbrains.kotlin:kotlin-stdlib-common:1.9.10" />
    <AndroidIgnoredJavaDependency Include="org.jetbrains.kotlin:kotlin-reflect:2.0.21" />
  </ItemGroup>

  <!-- AndroidX and Kotlin dependencies as NuGet packages -->
  <ItemGroup>
    <PackageReference Include="Xamarin.AndroidX.Annotation" Version="1.9.1" />
    <PackageReference Include="Xamarin.AndroidX.Collection" Version="1.4.5" />
    <PackageReference Include="Xamarin.AndroidX.Work.Runtime" Version="2.10.0" />
    <!-- Kotlin packages removed - Kotlin stdlib is embedded in Datadog SDK AARs -->
    <!-- Gson binding via NuGet instead of AndroidMavenLibrary (Gson has complex binding requirements) -->
    <PackageReference Include="GoogleGson" Version="2.11.0" />
    <!-- JetBrains annotations binding via NuGet -->
    <PackageReference Include="Xamarin.Jetbrains.Annotations" Version="26.0.1.1" />
  </ItemGroup>

  <!-- Metadata transforms for binding fixes -->
  <ItemGroup>
    <TransformFile Include="Transforms\Metadata.xml" />
  </ItemGroup>
</Project>
