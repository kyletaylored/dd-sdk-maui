  <remove-node path="/api/package[@name='com.datadog.android.api.net']" />
  <remove-node path="/api/package[@name='com.datadog.android.api.storage']" />
  <remove-node path="/api/package[@name='com.datadog.android.api.storage.datastore']" />
  <remove-node path="/api/package[@name='com.datadog.android.core']" />
  <remove-node path="/api/package[@name='com.datadog.android.core.configuration']" />
  <remove-node path="/api/package[@name='com.datadog.android.core.constraints']" />
  <remove-node path="/api/package[@name='com.datadog.android.core.feature.event']" />
  <remove-node path="/api/package[@name='com.datadog.android.core.internal']" />
