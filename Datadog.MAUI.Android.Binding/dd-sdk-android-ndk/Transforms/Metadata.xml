<metadata>
  <!--
    The NDK module's JAR embeds the entire core SDK as a transitive dependency.
    These core packages cause duplicate type definitions since we bind them separately
    in dd-sdk-android-core. We remove all core-related packages here, keeping only
    NDK-specific types (com.datadog.android.ndk.*).
  -->

  <!-- Namespace remapping to align with iOS bindings -->
  <!-- iOS: Datadog.iOS.CrashReporting -->
  <!-- Android: Datadog.Android.NDK (was Com.Datadog.Android.Ndk) -->
  <attr path="/api/package[@name='com.datadog.android.ndk']" name="managedName">Datadog.Android.NDK</attr>

  <!-- Remove core packages embedded in NDK AAR to prevent duplicates -->
  <remove-node path="/api/package[@name='com.datadog.android']" />
  <remove-node path="/api/package[@name='com.datadog.android.api']" />
  <remove-node path="/api/package[@name='com.datadog.android.api.context']" />
  <remove-node path="/api/package[@name='com.datadog.android.api.feature']" />
