<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-android;net10.0-android</TargetFrameworks>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>

    <PackageId>Datadog.MAUI.Android.GradlePlugin</PackageId>
    <RootNamespace>Datadog.MAUI.Android.GradlePlugin</RootNamespace>
    <Authors>Datadog</Authors>
    <Description>.NET bindings for Datadog Android SDK Gradle Plugin (build-time source code upload and symbol mapping)</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DataDog/dd-sdk-maui</RepositoryUrl>
    <PackageTags>.NET MAUI Android Datadog Mobile Binding Gradle Plugin Build</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Note: Gradle plugin version may differ from SDK version -->
    <AndroidMavenLibrary Include="com.datadoghq:dd-sdk-android-gradle-plugin" Version="1.9.0" VerifyDependencies="false" />
    <!-- Runtime Maven dependencies from POM -->
    <AndroidMavenLibrary Include="org.json:json" Version="20180813" VerifyDependencies="false" Bind="false" />
  </ItemGroup>

  <!-- AndroidX and third-party dependencies as NuGet packages -->
  <ItemGroup>
    <PackageReference Include="Square.OkHttp3" />
  </ItemGroup>

  <!-- Metadata transforms for binding fixes -->
  <ItemGroup>
    <TransformFile Include="Transforms\Metadata.xml" />
  </ItemGroup>
</Project>
